{
    "require_length": ["varchar", "binary", "decimal"],
    "optional_length": ["boolean", "tinyint", "smallint", "int", "bigint"],
    "no_length": ["date", "time", "datetime", "datetimetz", "json", "text", "mediumtext", "longtext", "exponent", "double"],
    "decimals": ["exponent", "double", "decimal"],
    "translate": {
        "server_to_local": {
            "timestamp": "datetimetz"
        },
        "local_to_server": {
            "boolean": "tinyint",
            "exponent": "double",
            "datetimetz": "timestamp"
        }
    },
    "sqlize": [
        {
            "find": "'",
            "replace": "''",
            "regex": "'",
            "type": true
        },
        {
            "find": "\\",
            "replace": "\\\\",
            "regex": "\\\\",
            "type": true
        },
        {
            "find": "true",
            "replace": 1,
            "regex": "^true$",
            "type": "tinyint"
        },
        {
            "find": "false",
            "replace": 0,
            "regex": "^false$",
            "type": "tinyint"
        },
        {
            "find": ".000Z",
            "replace": "",
            "regex": "\\.[0-9]{0,3}Z$",
            "type": ["datetime", "datetimetz"]
        },
        {
            "find": "T",
            "replace": " ",
            "regex": "T",
            "type": ["datetime", "datetimetz"]
        },
        {
            "find": "Z",
            "replace": "",
            "regex": "Z$",
            "type": ["datetime", "datetimetz"]
        },
        {
            "find": ",",
            "replace": "",
            "regex": ",",
            "type": ["binary", "tinyint", "smallint", "int", "bigint", "decimal"]
        },
        {
            "find": ".",
            "replace": "0",
            "regex": "^\\.{1}$",
            "type": ["binary", "tinyint", "smallint", "int", "bigint", "decimal"]
        }
    ]
}