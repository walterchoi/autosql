{
    "require_length": ["varchar", "binary", "decimal"],
    "optional_length": ["boolean", "tinyint", "smallint", "int", "bigint"],
    "no_length": ["date", "time", "datetime", "json", "text", "mediumtext", "longtext", "exponent", "double"],
    "decimals": ["exponent", "double", "decimal"],
    "translate": {
        "boolean": "tinyint",
        "exponent": "double"
    },
    "sqlize": [
        {
            "find": "'",
            "replace": "''",
            "regex": "/'/gmi",
            "type": true
        },
        {
            "find": "\\",
            "replace": "\\\\",
            "regex": "/\\/gmi",
            "type": true
        },
        {
            "find": "true",
            "replace": 1,
            "regex": "/^true$/gmi",
            "type": "boolean"
        },
        {
            "find": "false",
            "replace": 0,
            "regex": "/^false$/gmi",
            "type": "boolean"
        }
    ]
}