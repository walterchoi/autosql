{
    "require_length": [],
    "optional_length": ["varchar"],
    "no_length": ["date", "time", "datetime", "json", "text", "mediumtext", "longtext", "exponent", "double", "binary", "smallint", "int", "bigint", "boolean"],
    "decimals": ["exponent", "double", "decimal"],
    "translate": {
        "server_to_local": {
            "timestamp without time zone": "datetime",
            "integer": "int",
            "timestamp": "datetime",
            "character varying": "varchar",
            "numeric": "double",
            "double precision": "double"
        },
        "local_to_server": {
            "tinyint": "smallint",
            "exponent": "numeric",
            "double": "numeric",
            "datetime": "timestamp",
            "binary": "numeric"
        }
    },
    "sqlize": [
        {
            "find": "'",
            "replace": "''",
            "regex": "'",
            "type": true
        },
        {
            "find": "1",
            "replace": "true",
            "regex": "^1$",
            "type": "boolean"
        },
        {
            "find": "0",
            "replace": "false",
            "regex": "^0$",
            "type": "boolean"
        },
        {
            "find": ",",
            "replace": "",
            "regex": ",",
            "type": ["binary", "tinyint", "smallint", "int", "bigint", "decimal"]
        },
        {
            "find": ".",
            "replace": "0",
            "regex": "^\\.{1}$",
            "type": ["binary", "tinyint", "smallint", "int", "bigint", "decimal"]
        }
    ]
}