{
    "require_length": [],
    "optional_length": ["varchar"],
    "no_length": ["date", "time", "datetime", "timestamp", "json", "text", "mediumtext", "longtext", "exponent", "double", "binary", "smallint", "int", "bigint", "boolean"],
    "decimals": ["exponent", "double", "decimal"],
    "translate": {
        "tinyint": "smallint",
        "exponent": "double",
        "character varying": "varchar",
        "datetime": "timestamp",
        "integer": "int",
        "timestamp": "datetime"
    },
    "sqlize": [
        {
            "find": "'",
            "replace": "''",
            "regex": "'",
            "type": true
        },
        {
            "find": "%",
            "replace": "\\%",
            "regex": "/%/gmi",
            "type": true
        },
        {
            "find": "_",
            "replace": "\\_",
            "regex": "/_/gmi",
            "type": true
        },
        {
            "find": "\\",
            "replace": "\\\\",
            "regex": "/\\/gmi",
            "type": true
        },
        {
            "find": "1",
            "replace": true,
            "regex": "^1$",
            "type": "boolean"
        },
        {
            "find": "0",
            "replace": false,
            "regex": "^0$",
            "type": "boolean"
        },
        {
            "find": ",",
            "replace": "",
            "regex": "/,/gmi",
            "type": ["binary", "tinyint", "smallint", "int", "bigint", "decimal"]
        },
        {
            "find": ".",
            "replace": "0",
            "regex": "/^\\.{1}$/gmi",
            "type": ["binary", "tinyint", "smallint", "int", "bigint", "decimal"]
        }
    ]
}