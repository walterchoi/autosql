{
    "require_length": [],
    "optional_length": ["varchar"],
    "no_length": ["date", "time", "datetime", "json", "text", "mediumtext", "longtext", "exponent", "double", "binary", "smallint", "int", "bigint", "boolean"],
    "decimals": ["exponent", "double", "decimal"],
    "translate": {
        "tinyint": "smallint",
        "exponent": "double",
        "character varying": "varchar"
    },
    "sqlize": [
        {
            "find": "'",
            "replace": "''",
            "regex": "'",
            "type": true
        },
        {
            "find": "%",
            "replace": "\\%",
            "regex": "/%/gmi",
            "type": true
        },
        {
            "find": "_",
            "replace": "\\_",
            "regex": "/_/gmi",
            "type": true
        },
        {
            "find": "\\",
            "replace": "\\\\",
            "regex": "/\\/gmi",
            "type": true
        },
        {
            "find": "true",
            "replace": 1,
            "regex": "/^true$/gmi",
            "type": "tinyint"
        },
        {
            "find": "false",
            "replace": 0,
            "regex": "/^false$/gmi",
            "type": "tinyint"
        },
        {
            "find": ",",
            "replace": "",
            "regex": "/,/gmi",
            "type": ["binary", "tinyint", "smallint", "int", "bigint", "decimal"]
        },
        {
            "find": ".",
            "replace": "0",
            "regex": "/^\\.{1}$/gmi",
            "type": ["binary", "tinyint", "smallint", "int", "bigint", "decimal"]
        }
    ]
}